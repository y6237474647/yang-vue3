{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false,
    "moduleResolution": "node",
  },

  "include": ["src/**/*.ts",
     "src/**/*.d.ts",
      "src/**/*.tsx",
       "src/**/*.vue",
       "type/**/*.d.ts"
      ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
